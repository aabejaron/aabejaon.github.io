<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Assignment 1 — Conversions</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    body{font-family:system-ui,Segoe UI,Roboto,Arial;margin:20px;max-width:720px}
    label,input,button{display:block;margin:6px 0}
    .row{display:flex;gap:8px;align-items:center}
  </style>
</head>
<body>
  <h1>Assignment 1 — Conversions</h1>

  <section>
    <h2>Temperature</h2>
    <div>
      <label>Celsius: <input id="celsius" type="number" step="any" /></label>
      <div class="row">
        <button onclick="cToF()">Convert C → F</button>
        <button onclick="fToC()">Convert F → C</button>
      </div>
      <p id="tempResult"></p>
    </div>
  </section>

  <section>
    <h2>Length</h2>
    <div>
      <label>Meters: <input id="meters" type="number" step="any" /></label>
      <label>Feet: <input id="feet" type="number" step="any" /></label>
      <div class="row">
        <button onclick="mToFt()">Meters → Feet</button>
        <button onclick="ftToM()">Feet → Meters</button>
      </div>
      <p id="lenResult"></p>
    </div>
  </section>

  <script>
    function cToF(){
      const c = parseFloat(document.getElementById('celsius').value);
      if (isNaN(c)) { showTemp('Enter a number for Celsius'); return; }
      const f = (c * 9/5) + 32;
      showTemp(`${c} °C = ${f.toFixed(2)} °F`);
    }
    function fToC(){
      const f = parseFloat(document.getElementById('celsius').value);
      if (isNaN(f)) { showTemp('Enter a number for Fahrenheit'); return; }
      const c = (f - 32) * 5/9;
      showTemp(`${f} °F = ${c.toFixed(2)} °C`);
    }
    function mToFt(){
      const m = parseFloat(document.getElementById('meters').value);
      if (isNaN(m)) { showLen('Enter a number of meters'); return; }
      const ft = m * 3.28084;
      showLen(`${m} m = ${ft.toFixed(3)} ft`);
    }
    function ftToM(){
      const ft = parseFloat(document.getElementById('feet').value);
      if (isNaN(ft)) { showLen('Enter a number of feet'); return; }
      const m = ft / 3.28084;
      showLen(`${ft} ft = ${m.toFixed(3)} m`);
    }
    function showTemp(msg){ document.getElementById('tempResult').textContent = msg; }
    function showLen(msg){ document.getElementById('lenResult').textContent = msg; }
  </script>
</body>
</html>
